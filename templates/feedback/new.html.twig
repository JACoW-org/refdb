<div class="modal-header">
    <h5 class="modal-title">What is the problem?</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    {{ form_start(form) }}

    <p>Please address or describe the issue below.</p>

    {{ form_errors(form) }}

    {{ form_row(form.title) }}

    {{ form_row(form.author) }}

    {{ form_row(form.position) }}

    {{ form_row(form.customDoi) }}

    {{ form_row(form.feedback) }}

    <hr />
    {{ form_row(form.email) }}

    <hr />
    <br />
    <div class="row">
        <div class="col">
            <a href="javascript:void(0)" class="btn btn-default btn-block" data-dismiss="modal">Cancel</a>
        </div>
        <div class="col">
            <button type="submit" class="btn btn-primary btn-block btn-raised">Submit</button>
        </div>
    </div>
    {{ form_end(form) }}
</div>
